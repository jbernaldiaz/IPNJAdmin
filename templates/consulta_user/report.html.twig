{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="main container">
		<div class="row well">
			{{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
				
                <div class="col-md-3">


			    <div class="form-group">
			        {{ form_label(form.aporte) }}
			        {{ form_widget(form.aporte, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.aporte) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.anio) }}
			        {{ form_widget(form.anio, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.anio) }}</span>
			    </div>

			    

		    <center>
		    	<p><br />
		        {{ form_widget(form.save, {'label' : 'Consultar', 'attr': {'class': 'btn btn-success'}}) }}
		    </p></center> 
</div>               
        
                {{ form_end(form) }}
			
		</div>
	</div>
{% endblock %}