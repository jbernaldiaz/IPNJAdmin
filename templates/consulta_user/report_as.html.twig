{% extends 'base.html.twig' %}

{% block title %}Reporte Anual Asistencia Social{% endblock %}
{% block body %}
	{{ parent() }}
<div class="container">
	<div class="row well">
		<div class="col-md-12"><h3 class="padding-none"> Detalles de Aporte {{ aportes }} correspondiente al {{ anio }}</h3>
		</div>
			<table class="table table-bordered table-striped table-hover">
				<tr>
					<th align="center">Iglesia</th>
					<th align="center">Ene</th>
					<th align="center">Feb</th>
					<th align="center">Mar</th>
