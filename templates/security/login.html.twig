{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
{% endblock %}
{% block title %}Ingreso IPNJAdmin{% endblock %}

{% block body %}

            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 text-white mb-3 font-weight-normal">Ingrese sus datos</h1>
                <label class="text-white" for="inputEmail"><b>Email</b></label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label class="text-white" for="inputPassword"><b>Password</b></label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                <label class="text-white"><b>ReCaptcha</b></label>
                <div class="g-recaptcha" data-sitekey="6LdlGxMaAAAAAMub6Mx1F8itF_tkVl9yHqrzE1O1" data-callback="onloadCallback"></div>
                    <button id="formSubmit" class="btn btn-lg btn-primary" type="submit" disabled >
                        Ingresar
                    </button>
            </form>



<script type="text/javascript">
  var onloadCallback = function() {
   let formSubmit = document.querySelector("#formSubmit");
formSubmit.removeAttribute("disabled");
  console.log(formSubmit)};
</script>
<script src="https://www.google.com/recaptcha/api.js?">
</script>



{% endblock %}
