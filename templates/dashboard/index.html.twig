{% extends 'base.html.twig' %}
     
{% block body %}

	{{ parent() }}
<div class="container">
	<div class="page-header margin-none">
		<div class="row">
			<center>			
				<img src="{{asset('images/logoIPNJ.png') }}" width="300" height="220" alt="IPNJLogo" />					
				<br />
				<br />
			</center>
		{% if is_granted('ROLE_SUPER') %}
			<div class="col-md-4 col-md-offset-4">
					<br />
					<br />
					<a href="{{ path('consultaFN_super') }}" class="btn btn-primary btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Consultar Envios F. Nacional' }}
					</a>
					<br />	
					
					<a href="{{ path('consultaAS_super') }}" class="btn btn-warning btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Consultar Envios A. Social' }}
					</a>
					<br />	
			</div>
		{% endif %}
		{% if is_granted('ROLE_ADMIN') %}
			<div class="col-md-3 col-md-offset-3">
					<a href="{{ path('indexEnvios') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Consultar Envios F. Nacional' }}
					</a>
					<br />

					<a href="{{ path('report_fn') }}" class="btn btn-danger btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Reporte por ofrenda' }}
					</a>
					<br />

					<a href="{{ path('indexUser') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Listado de Iglesias' }}
					</a>
					<br />

					<a href="{{ path('addUser') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Agregar Iglesia' }}
					</a>
					<br />
				</div>
				<div class="col-md-3">
					<a href="{{ path('indexEnviosAS') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Consultar Envios A. Social' }}
					</a>
					<br />
					
					<a href="{{ path('report_as') }}" class="btn btn-danger btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Reporte por Aportes' }}
					</a>
					<br />

					<a href="{{ path('indexZona') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Listado de Zonas' }}
					</a>
					<br />

					<a href="{{ path('addZona') }}" class="btn btn-primary btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Agregar Zonas' }}
					</a>
					<br />	
				</div>
						{% endif %}
						{% if is_granted('ROLE_USER') %}

				<div class="col-md-4 col-md-offset-4">
					<a href="{{ path('addEnvios') }}" class="btn btn-primary btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Enviar Detalles F. Nacional' }}
					</a>
					<br />
					
					<a href="{{ path('consultaFN_user') }}" class="btn btn-primary btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Mis Envios F. Nacional' }}
					</a>
					<br />
					
					<a href="{{ path('addEnviosAS') }}" class="btn btn-warning btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Enviar Detalles A. Social' }}
					</a>
					<br />
					
					<a href="{{ path('consultaAS_user') }}" class="btn btn-warning btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
							{{ 'Mis Envios A. Social' }}
					</a>
					<br />
				</div>		
						{% endif %}	
			
		</div>				
	</div>
</div>
{% endblock %}