{% extends "base.html.twig" %}

{% block body %}
	{{ parent() }}

<div class="container">
				<div class="row well">

		<div class="col-md-12">
				<h3 class="padding-none"> Detalles de los Envios A la Tesoreria Nacional</h3>

			<div class="table-responsive">
				<p>Total records: <span id="total">{{ pagination.getTotalItemCount }}</span>
				</p>
                <table class="table table-striped table-hover">
				<thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'No.', 'u.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Iglesia', 'u.bautismo') }}</th>					
                        <th>{{ knp_pagination_sortable(pagination, 'Fecha', 'u.fechaAt') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'u.nombre') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Bautiz√≥', 'u.bautizo') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Reportado', 'u.createAt') }}</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for bautismo in pagination %}

                <tr>
                    <td>{{ bautismo.id }}</td>
                    <td>{{ bautismo.user }}</td>
                    <td>{{ bautismo.fechaAt|date('d-m-Y') }}</td>
                    <td>{{ bautismo.nombre }}</td>
                    <td>{{ bautismo.bautizo }}</td>
                    <td>{{ bautismo.createAt|date('d-m-Y  -  H:i') }}</td>
                    <td class="action">
					    <a href="{{ path('bautismos', { id: bautismo.id }) }}" class="btn btn-sm  btn-info">Ver</a> 
                    </td>
                    </tr>
                {% endfor %}
            </tbody>
		</table>
        <div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>
	</div>
    </div>
    </div>

{% endblock %}
